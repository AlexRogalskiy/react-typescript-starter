{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@types/node/globals.d.ts",
    "node_modules/@types/node/globals.d.ts",
    "node_modules/@types/webpack-env/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
